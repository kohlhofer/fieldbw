---
interface Props {
  currentPage: 'overview' | 'features' | 'download' | 'pricing' | 'privacy';
}

const { currentPage } = Astro.props;
---

<div class="backdrop-blur-sm px-6 md:px-12 pt-6 pb-8" style="background: linear-gradient(135deg, rgba(96, 165, 250, 0.20), rgba(59, 130, 246, 0.20));">

  <!-- Note Taker Navigation -->
  <div class="flex flex-wrap justify-center gap-4 md:gap-6 items-center">
    <a
      href="/note-taker"
      class={currentPage === 'overview'
        ? "text-white font-medium border-b-2 border-white pb-1 text-sm md:text-base drop-shadow-lg"
        : "text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg"
      }
    >
      Overview
    </a>
    <a
      href="/note-taker/features"
      class={currentPage === 'features'
        ? "text-white font-medium border-b-2 border-white pb-1 text-sm md:text-base drop-shadow-lg"
        : "text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg"
      }
    >
      Features
    </a>
    <a
      href="/note-taker/download"
      class={currentPage === 'download'
        ? "text-white font-medium border-b-2 border-white pb-1 text-sm md:text-base drop-shadow-lg"
        : "text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg"
      }
    >
      Download
    </a>
    <a
      href="/note-taker/pricing"
      class={currentPage === 'pricing'
        ? "text-white font-medium border-b-2 border-white pb-1 text-sm md:text-base drop-shadow-lg"
        : "text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg"
      }
    >
      Pricing
    </a>
    <a
      href="/note-taker/privacy"
      class={currentPage === 'privacy'
        ? "text-white font-medium border-b-2 border-white pb-1 text-sm md:text-base drop-shadow-lg"
        : "text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg"
      }
    >
      Privacy
    </a>
  </div>
</div>

---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  backgroundImage?: string;
}

const {
  title = 'Field Bureau + Werkstatt',
  description = 'Field Bureau + Werkstatt - Innovation and Craftsmanship',
  backgroundImage
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Lexend:wght@300;400;500&family=IBM+Plex+Mono:wght@500&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen font-body bg-cover bg-center bg-no-repeat bg-fixed" style={backgroundImage ? `background-image: url('${backgroundImage}');` : ''}>
    <slot />
  </body>
</html>

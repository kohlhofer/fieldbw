---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  backgroundImage?: string;
  gradientOverlay?: string;
}

const {
  title = 'Field Bureau + Werkstatt',
  description = 'Field Bureau + Werkstatt - Innovation and Craftsmanship',
  backgroundImage,
  gradientOverlay
} = Astro.props;

// Combine background image with gradient overlay
const backgroundStyle = backgroundImage && gradientOverlay
  ? `background-image: ${gradientOverlay}, url('${backgroundImage}');`
  : backgroundImage
  ? `background-image: url('${backgroundImage}');`
  : '';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#000000" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://fieldbw.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://fieldbw.com/images/media.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://fieldbw.com/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://fieldbw.com/images/media.jpg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Lexend:wght@300;400;500&family=IBM+Plex+Mono:wght@500&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="font-body min-h-screen bg-cover bg-center bg-no-repeat" style={backgroundStyle}>
    <slot />
  </body>
</html>

---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  backgroundImage?: string;
  gradientOverlay?: string;
}

const {
  title = 'Field Bureau + Werkstatt',
  description = 'Field Bureau + Werkstatt - Innovation and Craftsmanship',
  backgroundImage,
  gradientOverlay
} = Astro.props;

// Combine background image with gradient overlay
const backgroundStyle = backgroundImage && gradientOverlay
  ? `background-image: ${gradientOverlay}, url('${backgroundImage}');`
  : backgroundImage
  ? `background-image: url('${backgroundImage}');`
  : gradientOverlay
  ? `background-image: ${gradientOverlay};`
  : '';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#000000" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://fieldbw.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://fieldbw.com/images/media.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://fieldbw.com/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://fieldbw.com/images/media.jpg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Lexend:wght@300;400;500&family=IBM+Plex+Mono:wght@500&display=swap" rel="stylesheet" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZKTX369NCP"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-ZKTX369NCP');
    </script>

    <title>{title}</title>
  </head>
  <body class="font-body min-h-screen animate-fade-in" style={`
    ${backgroundStyle}
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    margin: 0;
    padding: 0;
    opacity: 0;
  `}>
    <!-- Content wrapper with safe area padding -->
    <div class="relative min-h-screen" style="
      padding-top: env(safe-area-inset-top);
      padding-right: env(safe-area-inset-right);
      padding-bottom: env(safe-area-inset-bottom);
      padding-left: env(safe-area-inset-left);
    ">
      <slot />
    </div>
  </body>
</html>

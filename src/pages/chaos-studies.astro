  { src: iphoneDark2, alt: 'Strange attractor on iPhone', device: 'iPhone', light: false },
  { src: ipadDark2, alt: 'Strange attractor on iPad', device: 'iPad', light: false },
  { src: iphoneLight1, alt: 'Strange attractor light mode on iPhone', device: 'iPhone', light: true },
  { src: ipadLight2, alt: 'Strange attractor light mode on iPad', device: 'iPad', light: true },
  { src: iphoneMenu, alt: 'Attractor menu on iPhone', device: 'iPhone', light: false },
  { src: ipadDark3, alt: 'Strange attractor on iPad', device: 'iPad', light: false },

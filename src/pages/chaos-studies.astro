<script is:inline>
  // Lorenz Attractor Visualization
  const attractorSketch = (p) => {
    const o = 10;
    const b = 8/3;
    const rho = 28;
    const tstep = 0.01;
    const zoom = 8;
    let points = [];
    let iteration = 0;

    p.setup = () => {
      const container = document.getElementById('attractor-container');
      const canvas = p.createCanvas(container.offsetWidth, container.offsetHeight, p.WEBGL);
      canvas.parent('attractor-container');
      points = [{x: Math.random(), y: Math.random(), z: Math.random()}];
    };

    p.draw = () => {
      p.background(0);

      const lastPoint = points[points.length - 1];
      const dx = o * (lastPoint.y - lastPoint.x);
      const dy = lastPoint.x * (rho - lastPoint.z) - lastPoint.y;
      const dz = lastPoint.x * lastPoint.y - b * lastPoint.z;

      const newPoint = {
        x: lastPoint.x + dx * tstep,
        y: lastPoint.y + dy * tstep,
        z: lastPoint.z + dz * tstep
      };

      points.push(newPoint);
      if (points.length > 4500) {
        const removeP = Math.abs(Math.random() * (points.length - 2000));
        points.splice(removeP, 1);
      }

      iteration = 0;

      p.camera(p.width/2, p.height/2, -500);
      p.perspective(p.PI/12);
      p.translate(0, 0, 0);
      p.rotateX(p.millis() / 25000);
      p.rotateY(p.millis() / 15000);

      p.strokeWeight(0);
      points.forEach((pos) => {
        p.push();
        p.translate(pos.x * zoom, pos.y * zoom, pos.z * zoom - 80);
        const noiseScale = p.map(iteration, points.length, points.length - 500, 0.1, 7, true);
        let alpha = p.map(iteration, points.length, points.length - 400, 255, 70, true);
        if (Math.random() > 0.9995) alpha = 200;
        iteration++;
        p.fill(p.color(255, 255, 255, alpha));
        p.translate(
          p.noise(pos.y * 5 + p.millis()/5000) * noiseScale,
          p.noise(pos.z * 5 + p.millis()/6500) * noiseScale,
          p.noise(pos.x * 5 + p.millis()/5500) * noiseScale
        );
        p.sphere(0.8, 4, 4);
        p.pop();
      });
    };

    p.windowResized = () => {
      const container = document.getElementById('attractor-container');
      p.resizeCanvas(container.offsetWidth, container.offsetHeight);
    };
  };

  new p5(attractorSketch);
</script>

  { src: ipadDark4, alt: 'Strange attractor on iPad', device: 'iPad', light: false },
];

// Generate optimized lightbox versions (1400px wide)
const galleryImages = await Promise.all(
  galleryData.map(async (img) => {
    const lightboxImg = await getImage({ src: img.src, width: 1400, quality: 85 });
    return { ...img, lightboxSrc: lightboxImg.src };
  })
);

const attractors = [

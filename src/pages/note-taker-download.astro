---
import BaseLayout from '../layouts/BaseLayout.astro';
import NoteTakerNav from '../components/NoteTakerNav.astro';
import { FileText, Download, Laptop, Cpu, HardDrive, Mic, Video, Users, MessageSquare, Headphones } from 'lucide-react';
---

<BaseLayout
  title="Download – On-Device Note Taker"
  description="Download On-Device Note Taker for macOS. Requires macOS 15.0+ (Sequoia). Optimized for M1, M2, M3 Macs."
  backgroundImage="/images/bg3.jpg"
  gradientOverlay="linear-gradient(to bottom, rgba(0, 217, 255, 0.06), rgba(0, 217, 255, 0.06)), linear-gradient(to bottom, #0f172a, #020617)"
  disableAnimation={true}
>
  <div class="relative min-h-screen flex flex-col">

    <!-- Header with Navigation -->
    <div class="relative z-10 flex-1">
      <NoteTakerNav currentPage="download" />

  <!-- Page Header -->
  <section class="relative z-10 py-20">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-6xl font-light text-white leading-tight mb-4 drop-shadow-lg fade-in">
        Download for Mac
      </h1>
      <p class="text-xl md:text-2xl text-white/90 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Start transcribing meetings with complete privacy</p>
    </div>
  </section>

  <!-- Download Section -->
  <section class="relative z-10 py-24">
    <div class="max-w-2xl mx-auto px-6 text-center">
      <div class="flex justify-center mb-6 fade-in">
        <FileText size={96} className="text-white/90" />
      </div>
      <h2 class="text-4xl font-bold mb-3 text-white drop-shadow-lg fade-in" style="animation-delay: 0.1s;">On-Device Note Taker</h2>
      <p class="text-xl text-white/80 mb-8 drop-shadow-lg fade-in" style="animation-delay: 0.2s;">Version 1.0 • $9.99</p>

      <a
        href="#"
        class="inline-flex items-center gap-3 px-10 py-5 bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white rounded-xl font-semibold text-lg border border-white/30 transition-all hover:shadow-2xl hover:scale-105 mb-6 drop-shadow-lg fade-in"
        style="animation-delay: 0.3s;"
      >
        <Download size={24} className="text-white" />
        <span>Download from Mac App Store</span>
      </a>

      <div class="text-white/80 space-y-2 drop-shadow-lg fade-in" style="animation-delay: 0.4s;">
        <p><strong>One-time purchase</strong> • No subscription required</p>
        <p>14-day money-back guarantee via Mac App Store</p>
      </div>
    </div>
  </section>

  <!-- System Requirements -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16 drop-shadow-lg fade-in" style="color: #00D9FF;">System Requirements</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white/5 backdrop-blur-sm p-8 rounded-2xl text-center border border-white/10 fade-in">
          <div class="flex justify-center mb-4">
            <Laptop size={56} className="text-white/90" />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-white drop-shadow-lg">Operating System</h3>
          <p class="font-medium mb-2 text-white/90 drop-shadow-lg">macOS 15.0 (Sequoia) or later</p>
          <p class="text-sm text-white/70 drop-shadow-lg">Required for Apple Intelligence features</p>
        </div>

        <div class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl text-center border-2 border-white/30 relative fade-in" style="animation-delay: 0.1s;">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-white/20 backdrop-blur-sm text-white px-4 py-1 rounded-full text-xs font-semibold border border-white/30">
            Recommended
          </div>
          <div class="flex justify-center mb-4">
            <Cpu size={56} className="text-white/90" />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-white drop-shadow-lg">Processor</h3>
          <p class="font-medium mb-2 text-white/90 drop-shadow-lg">Apple Silicon (M1, M2, or M3)</p>
          <p class="text-sm text-white/70 drop-shadow-lg">Optimized for Neural Engine performance</p>
        </div>

        <div class="bg-white/5 backdrop-blur-sm p-8 rounded-2xl text-center border border-white/10 fade-in" style="animation-delay: 0.2s;">
          <div class="flex justify-center mb-4">
            <HardDrive size={56} className="text-white/90" />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-white drop-shadow-lg">Storage</h3>
          <p class="font-medium mb-2 text-white/90 drop-shadow-lg">200 MB for app</p>
          <p class="text-sm text-white/70 drop-shadow-lg">Plus space for your recordings and transcripts</p>
        </div>

        <div class="bg-white/5 backdrop-blur-sm p-8 rounded-2xl text-center border border-white/10 fade-in" style="animation-delay: 0.3s;">
          <div class="flex justify-center mb-4">
            <Mic size={56} className="text-white/90" />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-white drop-shadow-lg">Permissions</h3>
          <p class="font-medium mb-2 text-white/90 drop-shadow-lg">Microphone & Screen Recording</p>
          <p class="text-sm text-white/70 drop-shadow-lg">Required to capture meeting audio</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Getting Started -->
  <section class="relative z-10 py-24">
    <div class="max-w-4xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-4 text-white drop-shadow-lg fade-in">Getting Started</h2>
      <p class="text-xl text-white/80 text-center mb-16 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Up and running in minutes</p>

      <div class="space-y-6">
        {[
          {
            number: '1',
            title: 'Download & Install',
            description: 'Get On-Device Note Taker from the Mac App Store. Installation is automatic and takes just a few seconds.',
          },
          {
            number: '2',
            title: 'Grant Permissions',
            description: 'When you first launch, macOS will ask for microphone and screen recording permissions. These are required to capture meeting audio.',
          },
          {
            number: '3',
            title: 'Start Recording',
            description: 'Join a meeting, click the record button, and watch as your conversation is transcribed in real-time.',
          },
          {
            number: '4',
            title: 'Get Summaries',
            description: 'When your meeting ends, get instant AI-generated summaries, action items, and searchable transcripts.',
          },
        ].map((step, index) => (
          <div class="bg-white/5 backdrop-blur-sm p-8 rounded-2xl flex gap-6 border border-white/10 fade-in" style={`animation-delay: ${index * 0.1}s;`}>
            <div class="flex-shrink-0 w-14 h-14 bg-white/20 backdrop-blur-sm border border-white/30 rounded-full flex items-center justify-center text-white text-2xl font-bold drop-shadow-lg">
              {step.number}
            </div>
            <div>
              <h3 class="text-2xl font-semibold mb-2 text-white drop-shadow-lg">{step.title}</h3>
              <p class="text-white/80 text-lg leading-relaxed drop-shadow-lg">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Works With -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-4 drop-shadow-lg fade-in" style="color: #00D9FF;">Works With Your Tools</h2>
      <p class="text-xl text-white/80 text-center mb-16 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Compatible with all major meeting platforms</p>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 mb-8">
        {[
          { icon: Video, name: 'Zoom' },
          { icon: Users, name: 'Microsoft Teams' },
          { icon: Video, name: 'Google Meet' },
          { icon: Mic, name: 'Webex' },
          { icon: MessageSquare, name: 'Slack Huddles' },
          { icon: Headphones, name: 'Any Audio App' },
        ].map((platform, index) => (
          <div class="bg-white/5 backdrop-blur-sm p-6 rounded-xl text-center hover:bg-white/10 transition-all border border-white/10 fade-in" style={`animation-delay: ${index * 0.1}s;`}>
            <div class="flex justify-center mb-3">
              <platform.icon size={48} className="text-white/90" />
            </div>
            <p class="font-medium text-white/90 drop-shadow-lg">{platform.name}</p>
          </div>
        ))}
      </div>

      <p class="text-center text-white/80 max-w-2xl mx-auto drop-shadow-lg fade-in" style="animation-delay: 0.6s;">
        Captures system audio from any application that plays sound on your Mac
      </p>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="relative z-10 py-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white drop-shadow-lg fade-in">Ready to Take Control of Your Meetings?</h2>
      <p class="text-xl mb-8 text-white/90 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Download now and start transcribing with complete privacy.</p>
      <a
        href="#"
        class="inline-flex items-center gap-3 px-10 py-5 bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white rounded-xl font-semibold text-lg border border-white/30 transition-all hover:shadow-2xl hover:scale-105 drop-shadow-lg fade-in"
        style="animation-delay: 0.2s;"
      >
        <Download size={24} className="text-white" />
        <span>Download for Mac - $9.99</span>
      </a>
      <p class="mt-6 text-sm text-white/70 drop-shadow-lg fade-in" style="animation-delay: 0.3s;">macOS 15.0+ • One-time purchase • 14-day money-back guarantee</p>
    </div>
  </section>
    </div>
  </div>

  <!-- Links Section -->
  <div class="relative z-10 border-t border-white/10 py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto flex flex-wrap justify-center gap-6 text-sm text-white/70">
      <a href="/support" class="hover:text-white transition-colors">Support</a>
      <span class="text-white/30">•</span>
      <a href="/note-taker-privacy-policy" class="hover:text-white transition-colors">Privacy Policy</a>
      <span class="text-white/30">•</span>
      <a href="/note-taker-terms" class="hover:text-white transition-colors">Terms of Service</a>
    </div>
  </div>

  <!-- Footer with black background -->
  <footer class="bg-black py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
      <p class="text-center text-white/30 text-xs tracking-wide">
        <a href="/" class="font-semibold hover:text-white/50 transition-colors">Field Bureau + Werkstatt</a>
        <span class="mx-2">•</span>
        © {new Date().getFullYear()} Field Bureau & Werkstatt LLC. All rights reserved.
      </p>
    </div>
  </footer>
</BaseLayout>

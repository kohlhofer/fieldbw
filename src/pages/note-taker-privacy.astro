---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Lock, ShieldOff, Shield, X, Cpu, ShieldCheck, HardDrive, Settings, Check } from 'lucide-react';
---

<BaseLayout
  title="Privacy – On-Device Note Taker"
  description="On-Device Note Taker privacy policy: 100% local processing, zero data collection, complete transparency. Your conversations stay yours."
  backgroundImage="/images/bg3.jpg"
  gradientOverlay="linear-gradient(to bottom, #4a4a4a, #2a2a2a)"
>
  <div class="relative min-h-screen flex flex-col">

    <!-- Header with Navigation -->
    <div class="relative z-10 flex-1">
      <div class="backdrop-blur-sm bg-white/5 border-b border-white/10 px-6 md:px-12 pt-6 pb-8">
        <nav class="mb-8">
          <a
            href="/"
            class="text-white/80 hover:text-white transition-colors duration-200 text-sm tracking-wide drop-shadow-lg"
          >
            ← Home
          </a>
        </nav>

        <!-- Note Taker Navigation -->
        <div class="flex flex-wrap justify-center gap-4 md:gap-6">
          <a href="/note-taker" class="text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg">Overview</a>
          <a href="/note-taker-features" class="text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg">Features</a>
          <a href="/note-taker-download" class="text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg">Download</a>
          <a href="/note-taker-pricing" class="text-white/70 hover:text-white transition-colors text-sm md:text-base drop-shadow-lg">Pricing</a>
          <a href="/note-taker-privacy" class="text-white font-medium border-b-2 border-white pb-1 text-sm md:text-base drop-shadow-lg">Privacy</a>
        </div>
      </div>

  <!-- Page Header -->
  <section class="relative z-10 py-20">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-6xl font-light text-white leading-tight mb-4 drop-shadow-lg fade-in">
        Privacy First.<br/><span class="text-white/90">Always.</span>
      </h1>
      <p class="text-xl md:text-2xl text-white/90 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Your conversations are nobody's business but yours.</p>
    </div>
  </section>

  <!-- Privacy Promise -->
  <section class="relative z-10 py-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold mb-6 text-white drop-shadow-lg fade-in">Our Privacy Guarantee</h2>
      <p class="text-xl text-white/80 leading-relaxed mb-12 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">
        On-Device Note Taker is designed from the ground up to protect your privacy. Everything happens on your Mac. Nothing is uploaded to the cloud. We can't access your data—it's technically impossible.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-8 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 fade-in">
          <div class="flex justify-center mb-4">
            <Lock size={56} className="text-white/90" />
          </div>
          <h3 class="text-2xl font-semibold mb-3 text-white drop-shadow-lg">100% Local Processing</h3>
          <p class="text-white/80 drop-shadow-lg">
            All transcription, AI summaries, and analysis happen on your Mac using Apple Intelligence. Your data never leaves your device.
          </p>
        </div>
        <div class="p-8 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 fade-in" style="animation-delay: 0.1s;">
          <div class="flex justify-center mb-4">
            <ShieldOff size={56} className="text-white/90" />
          </div>
          <h3 class="text-2xl font-semibold mb-3 text-white drop-shadow-lg">Zero Data Collection</h3>
          <p class="text-white/80 drop-shadow-lg">
            We don't collect, store, or transmit your recordings, transcripts, or any meeting content. Not now. Not ever.
          </p>
        </div>
        <div class="p-8 bg-white/5 backdrop-blur-sm rounded-2xl border border-white/10 fade-in" style="animation-delay: 0.2s;">
          <div class="flex justify-center mb-4">
            <Shield size={56} className="text-white/90" />
          </div>
          <h3 class="text-2xl font-semibold mb-3 text-white drop-shadow-lg">Complete Transparency</h3>
          <p class="text-white/80 drop-shadow-lg">
            No hidden tracking, no analytics servers, no third-party SDKs. Just a clean, sandboxed macOS app.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Don't Collect -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-4 text-white drop-shadow-lg fade-in">What We Don't Collect</h2>
      <p class="text-xl text-white/80 text-center mb-16 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">A comprehensive list of data we never touch</p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {[
          { title: 'Audio Recordings', desc: 'Your meeting audio stays on your Mac. We never upload or access it.' },
          { title: 'Transcripts', desc: 'All transcription happens locally. We never see your conversations.' },
          { title: 'Meeting Content', desc: 'Summaries, action items, and chat responses stay on your device.' },
          { title: 'Usage Analytics', desc: 'We don\'t track how you use the app or which features you access.' },
          { title: 'Personal Information', desc: 'No names, emails, phone numbers, or other identifying data.' },
          { title: 'Metadata', desc: 'Meeting times, durations, participant counts—all local to you.' },
        ].map((item, index) => (
          <div class="bg-white/5 backdrop-blur-sm p-8 rounded-2xl text-center border-2 border-white/10 fade-in" style={`animation-delay: ${index * 0.1}s;`}>
            <div class="flex justify-center mb-4">
              <X size={48} className="text-red-400" />
            </div>
            <h3 class="text-xl font-semibold mb-3 text-white drop-shadow-lg">{item.title}</h3>
            <p class="text-white/80 drop-shadow-lg">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Technical Details -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16 text-white drop-shadow-lg fade-in">How We Ensure Privacy</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {[
          {
            icon: Cpu,
            title: 'On-Device Processing',
            desc: 'We use Apple\'s on-device Speech and Natural Language APIs. These run entirely on your Mac\'s Neural Engine. There are no On-Device Note Taker servers.',
          },
          {
            icon: ShieldCheck,
            title: 'Sandboxed Application',
            desc: 'The app runs in Apple\'s security sandbox, limiting what it can access and preventing unauthorized data transmission. Available only through the Mac App Store.',
          },
          {
            icon: HardDrive,
            title: 'Local Storage Only',
            desc: 'All data is stored in your Mac\'s local storage, protected by your system\'s encryption. We don\'t offer cloud sync because that would compromise privacy.',
          },
          {
            icon: Settings,
            title: 'Works Offline',
            desc: 'After initial download, the app works completely offline. You can disconnect and still transcribe. Perfect for flights or secure facilities.',
          },
        ].map((item, index) => (
          <div class="bg-white/5 backdrop-blur-sm p-8 rounded-2xl border border-white/10 fade-in" style={`animation-delay: ${index * 0.1}s;`}>
            <div class="mb-4">
              <item.icon size={48} className="text-white/90" />
            </div>
            <h3 class="text-2xl font-semibold mb-3 text-white drop-shadow-lg">{item.title}</h3>
            <p class="text-white/80 leading-relaxed drop-shadow-lg">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Comparison -->
  <section class="relative z-10 py-24">
    <div class="max-w-5xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16 text-white drop-shadow-lg fade-in">Privacy vs. Competitors</h2>

      <div class="bg-white/10 backdrop-blur-sm rounded-2xl overflow-hidden shadow-lg border border-white/20 fade-in" style="animation-delay: 0.1s;">
        <table class="w-full">
          <thead>
            <tr class="bg-white/10">
              <th class="px-6 py-4 text-left text-white/90 drop-shadow-lg">Privacy Feature</th>
              <th class="px-6 py-4 text-left bg-white/20 text-white drop-shadow-lg">On-Device Note Taker</th>
              <th class="px-6 py-4 text-left text-white/90 drop-shadow-lg">Cloud-Based Tools</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/10">
            {[
              ['Where is audio stored?', 'Your Mac only', 'Company servers'],
              ['Can the company access your data?', '✓ No, technically impossible', '✗ Yes, they have full access'],
              ['Works offline?', '✓ Completely', '✗ Requires internet'],
              ['Data used for training AI?', '✓ Never', '✗ Often, per ToS'],
              ['Third-party access?', '✓ None', '✗ Possible via API/integrations'],
            ].map(([feature, ours, theirs]) => (
              <tr>
                <td class="px-6 py-4 font-medium text-white/90 drop-shadow-lg">{feature}</td>
                <td class="px-6 py-4 bg-white/10 text-white/90 drop-shadow-lg">{ours}</td>
                <td class="px-6 py-4 text-white/70 drop-shadow-lg">{theirs}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="relative z-10 py-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white drop-shadow-lg fade-in">Privacy You Can Trust</h2>
      <p class="text-xl mb-8 text-white/90 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Because your conversations are nobody's business but yours.</p>
      <a
        href="/note-taker-download"
        class="inline-block px-10 py-5 bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white rounded-xl font-semibold text-lg border border-white/30 transition-all hover:shadow-2xl hover:scale-105 drop-shadow-lg fade-in"
        style="animation-delay: 0.2s;"
      >
        Download On-Device Note Taker
      </a>
      <p class="mt-6 text-sm text-white/70 drop-shadow-lg fade-in" style="animation-delay: 0.3s;">100% local. 0% cloud. Forever private.</p>
    </div>
  </section>
    </div>
  </div>

  <!-- Footer with black background -->
  <footer class="bg-black py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
      <p class="text-center text-white/30 text-xs tracking-wide">
        <span class="font-semibold">Field Bureau + Werkstatt</span>
        <span class="mx-2">•</span>
        © {new Date().getFullYear()} Field Bureau & Werkstatt LLC. All rights reserved.
      </p>
    </div>
  </footer>
</BaseLayout>

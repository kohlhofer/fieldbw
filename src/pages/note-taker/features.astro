---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NoteTakerNav from '../../components/NoteTakerNav.astro';
import { Lock, ShieldOff, Check, Laptop, Cloud, X, Mic, Zap, Sparkles, MessageSquare, Upload, Tag, Search, Users } from 'lucide-react';

const iconSize = 40;
---

<BaseLayout
  title="Features – On-Device Note Taker"
  description="Explore the powerful features of On-Device Note Taker: privacy-first transcription, AI summaries, speaker identification, and more."
  backgroundImage="/images/bg3.jpg"
  gradientOverlay="linear-gradient(to bottom, rgba(0, 217, 255, 0.06), rgba(0, 217, 255, 0.06)), linear-gradient(to bottom, #0f172a, #020617)"
  disableAnimation={true}
>
  <div class="relative min-h-screen flex flex-col">

    <!-- Header with Navigation -->
    <div class="relative z-10 flex-1">
      <NoteTakerNav currentPage="features" />

  <!-- Page Header -->
  <section class="relative z-10 py-20">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-6xl font-light text-white leading-tight mb-4 drop-shadow-lg fade-in">
        Powerful Features.<br/><span style="color: #00D9FF;">Complete Privacy.</span>
      </h1>
      <p class="text-xl md:text-2xl text-white/90 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Everything you need for meeting transcription, all on your Mac.</p>
    </div>
  </section>

  <!-- Feature: Privacy -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="fade-in">
          <h2 class="text-4xl font-bold mb-4 drop-shadow-lg" style="color: #00D9FF;">100% Local Processing</h2>
          <h3 class="text-xl text-white/80 mb-6 drop-shadow-lg">Your data never leaves your Mac</h3>
          <p class="text-lg text-white/80 mb-6 drop-shadow-lg">
            Unlike cloud-based competitors, On-Device Note Taker processes everything locally using Apple Intelligence. Your audio files, transcripts, and AI summaries stay on your device.
          </p>
          <ul class="space-y-3">
            {[
              'Zero cloud uploads',
              'No external servers',
              'No data mining',
              'Works completely offline',
              'Sandboxed and secure',
            ].map((item, index) => (
              <li class="flex items-center gap-3 text-lg text-white/90 drop-shadow-lg" style={`animation-delay: ${index * 0.1}s;`}>
                <Check size={20} style={{color: '#00D9FF'}} />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 fade-in" style="animation-delay: 0.2s;">
          <div class="flex items-center justify-center gap-8">
            <div class="bg-white/10 backdrop-blur-sm p-8 rounded-xl border-2 shadow-lg text-center flex-1" style="border-color: rgba(0, 217, 255, 0.5);">
              <div class="flex justify-center mb-4">
                <Laptop size={48} className="text-white/90" />
              </div>
              <h4 class="font-semibold text-lg mb-2 text-white drop-shadow-lg">Your Mac</h4>
              <p class="text-sm text-white/70 drop-shadow-lg">All processing happens here</p>
            </div>
            <div class="flex flex-col items-center">
              <Lock size={32} style={{color: '#00D9FF'}} />
            </div>
            <div class="bg-white/5 backdrop-blur-sm p-8 rounded-xl border-2 border-white/20 text-center flex-1 relative opacity-50">
              <div class="flex justify-center mb-4">
                <Cloud size={48} className="text-white/60" />
              </div>
              <h4 class="font-semibold text-lg mb-2 text-white/70 drop-shadow-lg">Cloud</h4>
              <p class="text-sm text-white/60 drop-shadow-lg">Nothing goes here</p>
              <div class="absolute inset-0 flex items-center justify-center">
                <div class="bg-red-500 text-white rounded-full p-3">
                  <X size={40} className="text-white" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature: No Bots -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="order-2 lg:order-1 fade-in">
          <div class="space-y-4">
            <h4 class="font-semibold mb-6 text-white/90 text-lg drop-shadow-lg">Choose Your Audio Source</h4>

            <div class="flex items-center gap-4 p-4 bg-white/5 backdrop-blur-sm rounded-xl border border-white/10">
              <div class="flex-shrink-0 bg-blue-500/20 p-3 rounded-full">
                <Mic size={24} className="text-blue-400" />
              </div>
              <div>
                <p class="text-white font-medium drop-shadow-lg">Microphone Only</p>
                <p class="text-white/70 text-sm drop-shadow-lg">Your voice and local audio</p>
              </div>
            </div>

            <div class="flex items-center gap-4 p-4 bg-white/5 backdrop-blur-sm rounded-xl border border-white/10">
              <div class="flex-shrink-0 bg-purple-500/20 p-3 rounded-full">
                <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 9V4.5M9 9H4.5M9 9 3.75 3.75M9 15v4.5M9 15H4.5M9 15l-5.25 5.25M15 9h4.5M15 9V4.5M15 9l5.25-5.25M15 15h4.5M15 15v4.5m0-4.5 5.25 5.25" />
                </svg>
              </div>
              <div>
                <p class="text-white font-medium drop-shadow-lg">System Audio Only</p>
                <p class="text-white/70 text-sm drop-shadow-lg">Meeting audio from apps</p>
              </div>
            </div>

            <div class="flex items-center gap-4 p-4 backdrop-blur-sm rounded-xl border-2" style="background-color: rgba(0, 217, 255, 0.1); border-color: rgba(0, 217, 255, 0.3);">
              <div class="flex-shrink-0 p-3 rounded-full" style="background-color: rgba(0, 217, 255, 0.2);">
                <Check size={24} style={{color: '#00D9FF'}} />
              </div>
              <div>
                <p class="text-white font-medium drop-shadow-lg">Both (Recommended)</p>
                <p class="text-white/70 text-sm drop-shadow-lg">Complete meeting capture</p>
              </div>
            </div>

            <div class="mt-6 pt-6 border-t border-white/20 text-center">
              <p class="text-white/80 text-sm drop-shadow-lg">
                <span style="color: #00D9FF;" class="font-semibold">No meeting bots</span> • Works with any app
              </p>
            </div>
          </div>
        </div>
        <div class="order-1 lg:order-2 fade-in">
          <h2 class="text-4xl font-bold mb-4 drop-shadow-lg" style="color: #00D9FF;">Direct Audio Capture</h2>
          <h3 class="text-xl text-white/80 mb-6 drop-shadow-lg">No awkward meeting bots</h3>
          <p class="text-lg text-white/80 mb-6 drop-shadow-lg">
            Record meetings without the embarrassing "Recording Bot has joined" announcement. On-Device Note Taker captures system audio directly using ScreenCaptureKit.
          </p>
          <ul class="space-y-3">
            {[
              'Works with Zoom, Teams, Meet, and any app',
              'No visible bot in meetings',
              'Choose microphone, system audio, or both',
              'High-quality audio capture',
              'You control when recording happens',
            ].map((item, index) => (
              <li class="flex items-center gap-3 text-lg text-white/90 drop-shadow-lg" style={`animation-delay: ${index * 0.1}s;`}>
                <Check size={20} style={{color: '#00D9FF'}} />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature: AI Summaries -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="fade-in">
          <h2 class="text-4xl font-bold mb-4 drop-shadow-lg" style="color: #00D9FF;">AI Summaries</h2>
          <h3 class="text-xl text-white/80 mb-6 drop-shadow-lg">Automatic key points and insights</h3>
          <p class="text-lg text-white/80 mb-6 drop-shadow-lg">
            Get instant AI-generated summaries of your meetings. Extract key points and executive summaries without any extra work.
          </p>
          <ul class="space-y-3">
            {[
              'Key points identification',
              'Executive summaries',
              'All on-device processing',
              'Powered by Apple Intelligence',
            ].map((item, index) => (
              <li class="flex items-center gap-3 text-lg text-white/90 drop-shadow-lg" style={`animation-delay: ${index * 0.1}s;`}>
                <Check size={20} style={{color: '#00D9FF'}} />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 fade-in" style="animation-delay: 0.2s;">
          <div class="space-y-6">
            <div>
              <h4 class="text-sm font-semibold text-white/70 mb-2 drop-shadow-lg">ACTION ITEMS</h4>
              <ul class="space-y-2">
                <li class="text-white/90 drop-shadow-lg">• Design mockups due by end of week</li>
                <li class="text-white/90 drop-shadow-lg">• Schedule follow-up for December 15th</li>
                <li class="text-white/90 drop-shadow-lg">• Review budget proposal</li>
              </ul>
            </div>
            <div>
              <h4 class="text-sm font-semibold text-white/70 mb-2 drop-shadow-lg">KEY POINTS</h4>
              <ul class="space-y-2">
                <li class="text-white/90 drop-shadow-lg">• Focus shifted to mobile app priority</li>
                <li class="text-white/90 drop-shadow-lg">• December 15th confirmed as deadline</li>
                <li class="text-white/90 drop-shadow-lg">• Design phase starting this week</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature: Interactive Chat -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="order-2 lg:order-1 fade-in">
          <div class="space-y-6">
            <!-- User message bubble (right-aligned, blue) -->
            <div class="flex justify-end">
              <div class="max-w-[80%]">
                <div class="bg-blue-500 rounded-2xl rounded-tr-sm px-4 py-3 shadow-lg">
                  <p class="text-white drop-shadow-lg">What were the main action items from this meeting?</p>
                </div>
              </div>
            </div>

            <!-- AI response bubble (left-aligned, gray) -->
            <div class="flex justify-start">
              <div class="max-w-[85%]">
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl rounded-tl-sm px-4 py-3 shadow-lg">
                  <p class="text-white/95 drop-shadow-lg">The main action items were: completing design mockups by end of week, scheduling a follow-up for December 15th, and reviewing the budget proposal.</p>
                </div>
              </div>
            </div>

            <!-- User follow-up message -->
            <div class="flex justify-end">
              <div class="max-w-[75%]">
                <div class="bg-blue-500 rounded-2xl rounded-tr-sm px-4 py-3 shadow-lg">
                  <p class="text-white drop-shadow-lg">Who's responsible for the mockups?</p>
                </div>
              </div>
            </div>

            <!-- AI follow-up response -->
            <div class="flex justify-start">
              <div class="max-w-[80%]">
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl rounded-tl-sm px-4 py-3 shadow-lg">
                  <p class="text-white/95 drop-shadow-lg">Speaker 3 mentioned they'll start on the design mockups this week.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="order-1 lg:order-2 fade-in">
          <h2 class="text-4xl font-bold mb-4 drop-shadow-lg" style="color: #00D9FF;">Interactive Chat</h2>
          <h3 class="text-xl text-white/80 mb-6 drop-shadow-lg">Ask questions about your recordings</h3>
          <p class="text-lg text-white/80 mb-6 drop-shadow-lg">
            Chat with your transcripts using AI. Ask questions and get instant answers based on your meeting content. Perfect for finding specific information quickly.
          </p>
          <ul class="space-y-3">
            {[
              'Ask questions in natural language',
              'Get instant answers from transcripts',
              'Multi-turn conversations supported',
              'Context-aware responses',
              'All processing stays local',
            ].map((item, index) => (
              <li class="flex items-center gap-3 text-lg text-white/90 drop-shadow-lg" style={`animation-delay: ${index * 0.1}s;`}>
                <Check size={20} style={{color: '#00D9FF'}} />
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- More Features Grid -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16 text-white drop-shadow-lg fade-in">And Much More</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-0 md:divide-x md:divide-white/20">
        {[
          {
            icon: Zap,
            title: 'Real-Time Transcription',
            description: 'Words appear as you speak using Apple\'s latest on-device speech recognition.',
          },
          {
            icon: Users,
            title: 'Speaker Identification (Preview)',
            description: 'Color-coded transcripts make it easy to follow who said what.',
          },
          {
            icon: Upload,
            title: 'Flexible Export',
            description: 'Export to Markdown, text, JSON. Share via AirDrop, Messages, Mail.',
          },
        ].map((feature, index) => (
          <div class="space-y-4 border-l border-white/30 pl-6 md:border-l-0 md:border-white/20 md:px-6 lg:px-8 fade-in" style={`animation-delay: ${index * 0.1}s;`}>
            <h3 class="text-xl font-semibold text-white drop-shadow-lg">{feature.title}</h3>
            <p class="text-white/80 text-sm leading-relaxed drop-shadow-lg">{feature.description}</p>
          </div>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-0 md:divide-x md:divide-white/20 mt-12">
        {[
          {
            icon: Tag,
            title: 'Tags & Organization',
            description: 'Custom tags for easy organization. Search across all your documents.',
          },
          {
            icon: Search,
            title: 'Full-Text Search',
            description: 'Find anything across all your recordings and transcripts.',
          },
          {
            icon: Mic,
            title: 'Import Audio Files',
            description: 'Transcribe existing audio recordings. Supports common formats.',
          },
        ].map((feature, index) => (
          <div class="space-y-4 border-l border-white/30 pl-6 md:border-l-0 md:border-white/20 md:px-6 lg:px-8 fade-in" style={`animation-delay: ${(index + 3) * 0.1}s;`}>
            <h3 class="text-xl font-semibold text-white drop-shadow-lg">{feature.title}</h3>
            <p class="text-white/80 text-sm leading-relaxed drop-shadow-lg">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="relative z-10 py-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white drop-shadow-lg fade-in">Ready to Take Control of Your Meetings?</h2>
      <p class="text-xl mb-8 text-white/90 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Get started with On-Device Note Taker today.</p>
      <a
        href="/note-taker/download"
        class="inline-block px-10 py-5 bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white rounded-xl font-semibold text-lg border border-white/30 transition-all hover:shadow-2xl hover:scale-105 drop-shadow-lg fade-in"
        style="animation-delay: 0.2s;"
      >
        Download for Mac - $9.99
      </a>
      <p class="mt-6 text-sm text-white/70 drop-shadow-lg fade-in" style="animation-delay: 0.3s;">macOS 15.0+ • M1/M2/M3 Mac recommended</p>
    </div>
  </section>
    </div>
  </div>

  <!-- Links Section -->
  <div class="relative z-10 border-t border-white/10 py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto flex flex-wrap justify-center gap-6 text-sm text-white/70">
      <a href="/support" class="hover:text-white transition-colors">Support</a>
      <span class="text-white/30">•</span>
      <a href="/note-taker/privacy-policy" class="hover:text-white transition-colors">Privacy Policy</a>
      <span class="text-white/30">•</span>
      <a href="/note-taker/terms" class="hover:text-white transition-colors">Terms of Service</a>
    </div>
  </div>

  <!-- Footer with black background -->
  <footer class="bg-black py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
      <p class="text-center text-white/30 text-xs tracking-wide">
        <a href="/" class="font-semibold hover:text-white/50 transition-colors">Field Bureau + Werkstatt</a>
        <span class="mx-2">•</span>
        © {new Date().getFullYear()} Field Bureau & Werkstatt LLC. All rights reserved.
      </p>
    </div>
  </footer>
</BaseLayout>

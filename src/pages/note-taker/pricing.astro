---
import BaseLayout from '../layouts/BaseLayout.astro';
import NoteTakerNav from '../components/NoteTakerNav.astro';
import { Check, Mic, Sparkles, Users, Upload, Lock, Zap } from 'lucide-react';
---

<BaseLayout
  title="Pricing – On-Device Note Taker"
  description="On-Device Note Taker pricing: $9.99 one-time purchase. No subscriptions, no monthly fees. Compare and save over $200/year vs competitors."
  backgroundImage="/images/bg3.jpg"
  gradientOverlay="linear-gradient(to bottom, rgba(0, 217, 255, 0.06), rgba(0, 217, 255, 0.06)), linear-gradient(to bottom, #0f172a, #020617)"
  disableAnimation={true}
>
  <div class="relative min-h-screen flex flex-col">

    <!-- Header with Navigation -->
    <div class="relative z-10 flex-1">
      <NoteTakerNav currentPage="pricing" />

  <!-- Page Header -->
  <section class="relative z-10 py-20">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="text-5xl md:text-6xl font-light text-white leading-tight mb-4 drop-shadow-lg fade-in">
        Simple, Honest Pricing
      </h1>
      <p class="text-xl md:text-2xl text-white/90 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Buy once. Use forever. No subscriptions.</p>
    </div>
  </section>

  <!-- Main Pricing Card -->
  <section class="relative z-10 py-24">
    <div class="max-w-2xl mx-auto px-6">
      <div class="bg-white/10 backdrop-blur-sm border-2 border-white/30 rounded-3xl p-12 text-center shadow-2xl fade-in">
        <div class="inline-block bg-white/20 backdrop-blur-sm text-white px-6 py-2 rounded-full text-sm font-semibold mb-6 border border-white/30 drop-shadow-lg">
          One-Time Purchase
        </div>
        <h2 class="text-3xl font-bold mb-4 text-white drop-shadow-lg">On-Device Note Taker</h2>
        <div class="flex items-start justify-center mb-2 text-white">
          <span class="text-4xl font-semibold mt-2 drop-shadow-lg">$</span>
          <span class="text-7xl font-bold drop-shadow-lg">9.99</span>
        </div>
        <p class="text-xl text-white/80 mb-8 drop-shadow-lg">Pay once. Own it forever.</p>

        <ul class="text-left space-y-4 mb-8 max-w-md mx-auto">
          {[
            'All features included',
            'Unlimited transcriptions',
            'No monthly fees',
            'No usage limits',
            'Works on all your Macs',
            'Free updates',
            'Privacy guaranteed',
            'Offline functionality',
          ].map((feature, index) => (
            <li class="flex items-center gap-3 text-white/90" style={`animation-delay: ${index * 0.05}s;`}>
              <Check size={20} style={{color: '#00D9FF'}} />
              <span class="text-lg drop-shadow-lg">{feature}</span>
            </li>
          ))}
        </ul>

        <a
          href="/note-taker/download"
          class="block w-full py-4 bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white rounded-xl font-semibold text-lg border border-white/30 transition-all hover:shadow-2xl hover:scale-105 drop-shadow-lg"
        >
          Download for Mac
        </a>
        <p class="mt-4 text-sm text-white/70 drop-shadow-lg">Available on the Mac App Store • 14-day refund policy</p>
      </div>
    </div>
  </section>

  <!-- Cost Comparison -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 text-white drop-shadow-lg fade-in">See How Much You <span style="color: #00D9FF;">Save</span></h2>
      <p class="text-xl text-white/80 text-center mb-16 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">Compare the total cost over 2 years</p>

      <div class="max-w-4xl mx-auto fade-in" style="animation-delay: 0.2s;">
        <!-- Comparison Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
          <div class="bg-white/5 backdrop-blur-sm border-2 border-white/10 rounded-xl p-6 text-center">
            <h3 class="text-xl font-semibold mb-2 text-white/90 drop-shadow-lg">Others</h3>
            <div class="text-3xl font-bold text-white/90 mb-2 drop-shadow-lg">$240-408</div>
            <p class="text-sm text-white/70 drop-shadow-lg">$10-17/month × 24 months</p>
          </div>
          <div class="border-2 rounded-xl p-6 text-center backdrop-blur-sm" style="background-color: rgba(0, 217, 255, 0.1); border-color: rgba(0, 217, 255, 0.3);">
            <h3 class="text-xl font-semibold mb-2 text-white drop-shadow-lg">On-Device Note Taker</h3>
            <div class="text-3xl font-bold mb-2 drop-shadow-lg" style="color: #00D9FF;">$9.99</div>
            <p class="text-sm text-white/70 mb-4 drop-shadow-lg">One-time purchase</p>
            <div class="text-slate-900 px-4 py-2 rounded-full text-sm font-semibold" style="background-color: #00D9FF;">
              Save $230-398
            </div>
          </div>
        </div>

        <!-- Savings Summary -->
        <div class="text-center mt-8">
          <p class="text-xl text-white/90 mb-3 drop-shadow-lg">
            Over <span style="color: #00D9FF;" class="font-semibold">2 years</span>, you save:
          </p>
          <div class="text-4xl font-bold mb-2 drop-shadow-lg" style="color: #00D9FF;">$230-398</div>
          <p class="text-sm text-white/70 drop-shadow-lg">vs others</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included -->
  <section class="relative z-10 py-24">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-4 text-white drop-shadow-lg fade-in">Everything You Need</h2>
      <p class="text-xl text-white/80 text-center mb-16 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">No tiers. No add-ons. No upsells.</p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-0 md:divide-x md:divide-white/20">
        {[
          {
            icon: Mic,
            title: 'Recording & Transcription',
            features: [
              'Direct audio capture (no bots)',
              'Real-time transcription',
              'Unlimited recording length',
              'Multi-language support',
              'Import audio files',
            ],
          },
          {
            icon: Sparkles,
            title: 'AI Features',
            features: [
              'Automatic summaries',
              'Action items extraction',
              'Interactive chat',
              'Key points identification',
              'All on-device processing',
            ],
          },
          {
            icon: Users,
            title: 'Organization',
            features: [
              'Speaker identification (Preview)',
              'Custom tags',
              'Full-text search',
              'Color-coded speakers (Preview)',
              'Unlimited documents',
            ],
          },
        ].map((category, catIndex) => (
          <div class="space-y-4 border-l border-white/30 pl-6 md:border-l-0 md:border-white/20 md:px-6 lg:px-8 fade-in text-center" style={`animation-delay: ${catIndex * 0.1}s;`}>
            <h3 class="text-xl font-semibold text-white drop-shadow-lg">{category.title}</h3>
            <ul class="space-y-2">
              {category.features.map((feature) => (
                <li class="text-white/80 text-sm leading-relaxed drop-shadow-lg">{feature}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-0 md:divide-x md:divide-white/20 mt-12">
        {[
          {
            icon: Upload,
            title: 'Sharing & Export',
            features: [
              'Export to Markdown, text, JSON',
              'Share via AirDrop, Messages',
              'Native macOS integration',
              'Batch export',
              'Audio export',
            ],
          },
          {
            icon: Lock,
            title: 'Privacy & Security',
            features: [
              '100% local processing',
              'No cloud uploads',
              'Sandboxed app',
              'Works offline',
              'Your data stays yours',
            ],
          },
          {
            icon: Zap,
            title: 'Updates & Support',
            features: [
              'Free software updates',
              'New features included',
              'Email support',
              'Documentation',
              'Works on all your Macs',
            ],
          },
        ].map((category, catIndex) => (
          <div class="space-y-4 border-l border-white/30 pl-6 md:border-l-0 md:border-white/20 md:px-6 lg:px-8 fade-in text-center" style={`animation-delay: ${(catIndex + 3) * 0.1}s;`}>
            <h3 class="text-xl font-semibold text-white drop-shadow-lg">{category.title}</h3>
            <ul class="space-y-2">
              {category.features.map((feature) => (
                <li class="text-white/80 text-sm leading-relaxed drop-shadow-lg">{feature}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="relative z-10 py-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white drop-shadow-lg fade-in">Stop Paying Monthly. <span style="color: #00D9FF;">Start Owning.</span></h2>
      <p class="text-xl mb-8 text-white/90 drop-shadow-lg fade-in" style="animation-delay: 0.1s;">One purchase. Yours forever.</p>
      <a
        href="/note-taker/download"
        class="inline-block px-10 py-5 bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white rounded-xl font-semibold text-lg border border-white/30 transition-all hover:shadow-2xl hover:scale-105 drop-shadow-lg fade-in"
        style="animation-delay: 0.2s;"
      >
        Get On-Device Note Taker - $9.99
      </a>
      <p class="mt-6 text-sm text-white/70 drop-shadow-lg fade-in" style="animation-delay: 0.3s;">One purchase. Lifetime access. Money-back guarantee.</p>
    </div>
  </section>
    </div>
  </div>

  <!-- Links Section -->
  <div class="relative z-10 border-t border-white/10 py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto flex flex-wrap justify-center gap-6 text-sm text-white/70">
      <a href="/support" class="hover:text-white transition-colors">Support</a>
      <span class="text-white/30">•</span>
      <a href="/note-taker/privacy-policy" class="hover:text-white transition-colors">Privacy Policy</a>
      <span class="text-white/30">•</span>
      <a href="/note-taker/terms" class="hover:text-white transition-colors">Terms of Service</a>
    </div>
  </div>

  <!-- Footer with black background -->
  <footer class="bg-black py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
      <p class="text-center text-white/30 text-xs tracking-wide">
        <a href="/" class="font-semibold hover:text-white/50 transition-colors">Field Bureau + Werkstatt</a>
        <span class="mx-2">•</span>
        © {new Date().getFullYear()} Field Bureau & Werkstatt LLC. All rights reserved.
      </p>
    </div>
  </footer>
</BaseLayout>

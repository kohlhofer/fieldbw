---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Support - Field Bureau + Werkstatt"
  description="Get help with our apps and projects. Contact support for assistance."
  backgroundImage="/images/bg3.jpeg"
  gradientOverlay="linear-gradient(to bottom, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.5) 50%, rgba(0, 0, 0, 0.8))"
>
  <div class="relative min-h-screen flex flex-col">

    <!-- Content -->
    <div class="relative z-10 px-6 md:px-12 py-12 flex-1">
      <div class="max-w-4xl mx-auto">

        <!-- Header -->
        <div class="text-center mb-16 animate-fade-in-up" style="opacity: 0;">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-light text-white mb-6 drop-shadow-lg">
            Field Bureau + Werkstatt
          </h1>
          <p class="text-2xl text-white/90 mb-4 drop-shadow-lg font-light">
            Support & Help
          </p>
          <p class="text-lg text-white/70 drop-shadow-lg">
            Get in touch and we'll help you out.
          </p>
        </div>

        <!-- Contact Section -->
        <div class="text-center mb-16 animate-fade-in-up" style="animation-delay: 100ms; opacity: 0;">
          <div class="bg-white/10 border border-white/20 rounded-lg p-12 max-w-2xl mx-auto">
            <div class="w-20 h-20 bg-white/10 rounded-lg flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
              </svg>
            </div>

            <h2 class="text-3xl font-light text-white mb-4 drop-shadow-lg">Email Support</h2>
            <p class="text-white/80 mb-8 text-lg drop-shadow-lg">
              Send us an email and we'll get back to you as soon as possible.
            </p>

            <a
              href="mailto:midiVol@kohlhofer.com"
              class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-white/10 border border-white/30 rounded-lg hover:bg-white/20 hover:border-white/40 transition-all duration-200 shadow-lg"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
              </svg>
              Contact Support
            </a>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Footer with black background -->
  <footer class="bg-black py-8 px-6 md:px-12">
    <div class="max-w-7xl mx-auto">
      <p class="text-center text-white/30 text-xs tracking-wide">
        <a href="/" class="font-semibold hover:text-white/50 transition-colors">Field Bureau + Werkstatt</a>
        <span class="mx-2">•</span>
        © {new Date().getFullYear()} Field Bureau & Werkstatt LLC. All rights reserved.
      </p>
    </div>
  </footer>
</BaseLayout>
